{% extends 'base.html.twig' %}

{% block title %}Личный кабинет | {{ parent() }}{% endblock %}

{% block body %}
    <div class="dashboard">
        <div class="dashboard-header">
            <h1>Добро пожаловать, {{ user.firstName }}!</h1>
{#            <p class="user-role">{{ user.position }} | {{ user.department }}</p>#}
        </div>

        <!-- Уведомления -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-error">
                {{ message }}
            </div>
        {% endfor %}

        <!-- Информация о пользователе -->
        <div class="user-info-card">
            <h3>Информация о профиле</h3>
            <div class="user-info-grid">
                <div class="info-item">
                    <span class="info-label">ФИО:</span>
                    <span class="info-value">{{ user.fullName }}</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Email:</span>
                    <span class="info-value">{{ user.email }}</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Дата регистрации:</span>
                    <span class="info-value">{{ user.createdAt|date('d.m.Y') }}</span>
                </div>
            </div>
        </div>

        <!-- Форма создания нового расчета -->
        <div class="create-form-card">
            <h3>Создать новый расчет</h3>
            <form method="post" action="{{ path('app_dashboard') }}">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="name">Название расчета *</label>
                        <input type="text"
                               id="name"
                               name="name"
                               class="form-control"
                               placeholder="Например: Расчет ЖБ столба для БС №123"
                               required
                               maxlength="255">
                    </div>

                    <div class="form-group">
                        <label for="type">Тип расчета *</label>
                        <select id="type" name="type" class="form-control" required>
                            <option value="">Выберите тип</option>
                            {% for calculation_type in calculation_types %}
                                <option value="{{ calculation_type.value }}">
                                    {{ calculation_type.label }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            Создать расчет
                        </button>
                    </div>
                </div>

                <div style="margin-top: 0;">
                    <small style="color: #7f8c8d;">
                        * Обязательные поля
                    </small>
                </div>
            </form>
        </div>

        <!-- Список моих расчетов -->
        <div class="calculations-card">
            <h3>Мои расчеты ({{ calculations|length }})</h3>

            {% if calculations|length > 0 %}
                <table class="calculations-table">
                    <thead>
                    <tr>
                        <th>Название</th>
                        <th>Тип</th>
                        <th>Статус</th>
                        <th>Дата создания</th>
                        <th>Действия</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for calculation in calculations %}
                        <tr>
                            <td>
                                <strong>{{ calculation.name }}</strong>
                                {% if calculation.isDeleted() %}
                                    <br><small style="color: #e74c3c;">(Удален)</small>
                                {% endif %}
                            </td>
                            <td>{{ calculation.type.label }}</td>
                            <td>
                                <span class="status-badge status-{{ calculation.status.value }}">
                                    {{ calculation.status.label }}
                                </span>
                            </td>
                            <td>{{ calculation.createdAt|date('d.m.Y H:i') }}</td>
                            <td>
                                <div class="actions">
                                    <a href="{{ path('app_concrete_pillar_calc', {id: calculation.id}) }}"
                                       class="btn btn-small btn-edit">
                                        Редактировать
                                    </a>

                                    <form method="post"
                                          action="{{ path('app_calculation_change_status', {id: calculation.id}) }}"
                                          style="display: inline;">
                                        <select name="status"
                                                onchange="this.form.submit()"
                                                class="form-control btn-small btn-change-status"
                                                style="padding: 0.375rem 0.75rem; height: auto;">
                                            <option value="" disabled selected>Изменить статус</option>
                                            {% for status in ['draft', 'calculated', 'approved', 'archived'] %}
                                                <option value="{{ status }}"
                                                        {% if calculation.status.value == status %}selected{% endif %}>
                                                    {{ ('App\\Enum\\CalculationStatus::' ~ status|upper) }}
                                                </option>
                                            {% endfor %}
                                        </select>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div style="text-align: center; padding: 3rem; color: #7f8c8d;">
                    <p>У вас пока нет расчетов. Создайте первый расчет!</p>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
